# MockMate Production Environment Configuration
# Backend API: https://backend.mock-mate.com

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain Configuration
FRONTEND_URL=https://mock-mate.com
BACKEND_URL=https://backend.mock-mate.com
API_BASE_URL=https://backend.mock-mate.com/api

# Database Configuration (UPDATE WITH PRODUCTION VALUES)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=mockmate_production
DB_USER=mockmate_prod_user
DB_PASSWORD=your-secure-production-password
DATABASE_URL=postgresql://mockmate_prod_user:your-secure-production-password@your-production-db-host:5432/mockmate_production

# Redis Configuration (UPDATE WITH PRODUCTION VALUES)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration (GENERATE NEW SECURE KEYS)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-jwt-secret-key-for-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secure-cookie-secret-for-production-minimum-32-characters
SECURE_COOKIES=true

# CORS Configuration
CORS_ORIGINS=https://mock-mate.com,https://www.mock-mate.com,https://api.mock-mate.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
UPLOAD_MAX_SIZE=524288000
UPLOAD_PATH=/app/uploads

# Email Configuration (UPDATE WITH PRODUCTION VALUES)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@mock-mate.com
FROM_NAME=MockMate

# Firebase Configuration (UPDATE WITH PRODUCTION VALUES)
FIREBASE_PROJECT_ID=your-production-firebase-project
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@your-production-firebase-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xyz%40your-production-firebase-project.iam.gserviceaccount.com

# Cashfree Payment Configuration (UPDATE WITH PRODUCTION VALUES)
CASHFREE_APP_ID=your_production_cashfree_app_id
CASHFREE_SECRET_KEY=your_production_cashfree_secret_key
CASHFREE_CLIENT_ID=your_production_cashfree_client_id
CASHFREE_CLIENT_SECRET=your_production_cashfree_client_secret
CASHFREE_ENVIRONMENT=production

# Google Cloud Configuration (if using GCP services)
GOOGLE_APPLICATION_CREDENTIALS=/app/config/service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# OpenAI Configuration (if using AI features)
OPENAI_API_KEY=your-production-openai-api-key

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-for-production-minimum-32-characters
SESSION_SECURE=true
SESSION_MAX_AGE=86400000

# Feature Flags
MAINTENANCE_MODE=false
DEBUG_MODE=false
